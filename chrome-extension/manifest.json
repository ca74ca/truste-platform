{
  "manifest_version": 3,
  "name": "TRUSTE",
  "version": "0.4.0",
  "description": "Effort/Trust scoring overlay for UGC surfaces.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["badge.css"]
    }
  ]
}
